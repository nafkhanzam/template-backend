{
  "compilerOptions": {
    "skipLibCheck": true,
    "esModuleInterop": true,
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "lib": ["esnext"],
    "outDir": "./build",
    "rootDir": "./",
    "baseUrl": "./",
    "noErrorTruncation": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/*"],
      "@test/*": ["test/*"]
    }
  }
}
